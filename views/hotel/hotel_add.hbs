<h1>Add Hotel</h1>
<form action="/hotel/save-add" method="POST" enctype="multipart/form-data" id="add-hotel">
    <div class="form-group">
        <label for="name">Hotel Name</label>
        <input type="text" name="hotel_name" class="form-control" id="hotel_name">
    </div>

    <div class="form-group">
        <label for="customFile">Image</label>
        <div class="custom-file">
            <input type="file" name="hotel_image" class="custom-file-input" id="hotel_image">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
    </div>

    <div class="form-group">
        <label for="name">City</label>
        <input type="text" name="hotel_city" class="form-control" id="hotel_city">
    </div>

    <div class="form-group">
        <label for="name">Address</label>
        <input type="text" name="hotel_address" class="form-control" id="hotel_address">
    </div>

    <div class="form-group">
        <label for="name">Owner</label>
        <input type="text" name="hotel_owner" class="form-control" id="hotel_owner">
    </div>

    <div class="form-group">
        <label for="name">License Number</label>
        <input type="number" name="hotel_license_number" class="form-control" id="hotel_license_number">
    </div>

    <div class="form-group">
        <label for="name">Total Floor</label>
        <input type="number" name="hotel_total_floor" class="form-control" id="hotel_total_floor">
    </div>

    <button type="submit" class="btn btn-outline-success">Save</button>
    <a href="/hotel" class="btn btn-outline-danger">Cancel</a>
</form>
<script>
    $(document).ready(function () {
        $("#add-hotel").validate({
            rules: {
                hotel_name: {
                    required: true,
                },
                hotel_owner: {
                    required: true,
                },
                hotel_image: {
                    required: true,
                    extension: "jpg|jpeg|png",
                },
                hotel_city: {
                    required: true,
                },
                hotel_address: {
                    required: true,
                },
                hotel_license_number: {
                    required: true,
                    number: true,
                    min: 1,
                },
                hotel_total_floor: {
                    required: true,
                    number: true,
                    min: 1,
                }
            },
            messages: {
                hotel_name: {
                    required: "* Mục này không được để trống!",
                },
                hotel_owner: {
                    required: "* Mục này không được để trống!",
                },
                hotel_image: {
                    required: "* Mục này không được để trống!",
                },
                hotel_city: {
                    required: "* Mục này không được để trống!",
                },
                hotel_address: {
                    required: "* Mục này không được để trống!",
                },
                hotel_license_number: {
                    required: "* Mục này không được để trống!",
                },
                hotel_total_floor: {
                    required: "* Mục này không được để trống!",
                }
            }
        });
    });
</script>